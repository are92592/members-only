extends layout

block content
  h1= message
  body  
    if user
      h1= "welcome back" + user
      a(href="/log-out") Log Out
    else    
      h1="Please log in"

      form(method='POST' action='')
        div.form-group
          label(for='username') Username:
          input#title.form-control(type='text', placeholder='Username' name='username' required='true' value=(undefined===username ? '' :  user.username) )
        div.form-group
          label(for='password') Password:
          input#title.form-control(type='text', placeholder='Password' name='password' required='true' value=(undefined===password ? '' : user.password) )
        
       button.btn.btn-primary(type='submit') Submit

      if errors
        ul
          for error in errors
            li!= error.msg


