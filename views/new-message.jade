extends layout
body
block content
    h1= title 

    form(method='POST' action='')
        div.form-group
        label(for='post-title') Title:
        input#title.form-control(type='text', placeholder='Title' name='title' required='true' value= (undefined===message ? '' : message.title))
        div.form-group
        label(for='script') Script:
        textarea#title.form-control(type='text', placeholder='Script' name='script' required='true' value=(undefined===message ? '' : message.script) )
        
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg



