extends layout
body
block content
    h3.className#signupFormTitle Sign Up
    form.className#signupFormContainer(method='POST' action='sign-up')
      form.className#signupForm
        div.form-group
        label(for='username') Username:
        input#title.form-control(type='text', placeholder='Username' name='username' required='true' value=(undefined===username ? '' :  user.username) )
        div.form-group
        label(for='password') Password:
        input#title.form-control(type='password', placeholder='Password' name='password' required='true' value=(undefined===password ? '' : user.password) )
        div.form-group
        label(for='confirm-password') Confirm Password:
        input#title.form-control(type='password', placeholder='Confirm Password' name='passwordConfirm' required='true' value=(undefined===password ? '' : user.password) )
        
        button.btn.btn-secondary(type='submit') Submit

    if errors
        ul
        for error in errors
            li!= error.msg